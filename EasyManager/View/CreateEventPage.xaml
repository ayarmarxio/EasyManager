<Page
    x:Class="EasyManager.View.CreateEventPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EasyManager.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:EasyManager.ViewModel"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush
                ImageSource="../Assets/solid-color-wallpaper-21962-22515-hd-wallpapers.jpg"></ImageBrush>
        </Grid.Background>

        <Grid.DataContext>
            <ViewModel:EventViewModel/>
        </Grid.DataContext>



        <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="136" Margin="0,17,0,780" Grid.RowSpan="2" Width="900">
            <TextBlock  Text="Create your own event" FontSize="100" Foreground="White" FontFamily="Forte" />
        </StackPanel>



        <Grid Column="1" Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0">
                    <TextBlock Text="Name: " Foreground="White" FontSize="30"></TextBlock>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
                    <TextBox Name="CreateNameTextBox" Width="400" Height="50" Text="{Binding Name, Mode=TwoWay}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0">
                    <TextBlock Text="Description: " Foreground="White" FontSize="30"></TextBlock>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
                    <TextBox Width="500" Height="50" Text="{Binding Description, Mode=TwoWay}"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0">
                    <TextBlock Text="Place: " Foreground="White" FontSize="30"></TextBlock>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
                    <TextBox Width="500" Height="50" Text="{Binding Place, Mode=TwoWay}"></TextBox>
                </StackPanel>
            </Grid>
            <DatePicker x:Name="CreateEventPageDatePicker" Grid.Row="3" HorizontalAlignment="Center"
                        Date="{Binding Date, Mode=TwoWay}" ></DatePicker>
            <TimePicker x:Name="CreateEventPageTimePicker" Grid.Row="4" HorizontalAlignment="Center"
                        Time="{Binding Time.TimeOfDay, Mode=TwoWay}"></TimePicker>
            
            
            <Grid Grid.Row="5" >
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button Height="55" Width="450" Content="Create Event"  Foreground="White" FontSize="30" 
                            Command="{Binding CreateEventCommand}" Margin="10, 10, 10, 10" ></Button>
                   <Button Height="55" Width="450" Content="BackToEventPage" Foreground="White" FontSize="30" 
                            Margin="10, 10, 10, 10" Click="ToMainPage"></Button>

                </StackPanel>

            </Grid>

        </Grid>


    </Grid>
</Page>
